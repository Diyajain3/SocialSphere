<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Dashboard</title>

  <!-- Tailwind CDN -->
  <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>

  <div class="w-full min-h-screen bg-pink-200 p-10 text-black">

   
    <!-- Logout Button -->
    <div class="flex justify-end w-full">
      
      <a href="/logout"
         class="bg-red-400 rounded-md px-3 text-sm py-2  inline-block ">
        Logout
      </a>
      
    </div>

    <!-- Greeting -->
     <div class="flex item-start gap-3">
        <div class="w-11 h-11 rounded-full border-black-200 overflow-hidden border-1">
          <img src="/images/uploads/<%= user.profilepic %>" alt="" class="w-full h-full object-cover">
        </div>
         
        <h3 class="text-2xl"><span class="font-light">Hello</span>, <%=user.name%> üëã</h3>
    </div>
    <a href="/profile/upload" class="justify-start bg-blue-800 p-0.5 text-xs  inline-block rounded-md ml-14 text-white">Upload Profile</a>
    <h5 class="mb-3 mt-1">You can create a new Post.</h5>


    <!-- Create Post Form -->
<form action="/post" method="POST">

  <textarea
    name="content"
    placeholder="What's on your mind?"
    class="p-3 outline-none resize-none bg-transparent border-2 border-black-400 rounded-md w-1/3 block"
  ></textarea>

  <input
    class="px-3 py-2 bg-pink-500 block rounded-md mt-2 w-36 text-sm cursor-pointer"
    type="submit"
    value="Create Post"
  />

</form>



    <!-- Posts Section -->
    <div class="posts mt-20">

      <h3 class="text-zinc-800">Your Posts</h3>

      <div class="postcontainer mt-5 space-y-5">

        <%user.posts.reverse().forEach(function(post){%>
            

          <!-- Single Post -->
        <div class="w-1/3 mb-4 post p-4  border-zinc-700 rounded-md bg-zinc-800 text-white">

          <h4 class="text-blue-500 mb-2">
            @<%= user.username %>
          </h4>

          <p class="text-sm tracking-tighter">
           <%= post.content %>

          </p>

          <!-- Buttons -->
           <small class="mt-4 inline-block">
              <%= post.likes.length %> üëç
           </small>

          <div class="btns flex gap-4 mt-1">

            <a href="/like/<%=post._id%>" class="text-blue-500 hover:underline">
            <%= post.likes.indexOf(user._id) === -1 ? "Like" : "Unlike" %>

            </a>

            <a href="/edit/<%= post._id%>" class="text-zinc-400 hover:underline">
              Edit
            </a>

          </div>

        </div>

        <%});%>

      </div>

    </div>

  </div>

</body>
</html>
